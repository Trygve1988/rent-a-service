<div class="card">
  <div class="card-body" style="padding:6px">
    <div class="container" style="padding:0px">
      <div class="row">
        <div class="col-4">
          <%= image_tag("profile.jpg", width: "100%") %>
        </div>
        <div class="col">
          <h5 class="card-title" style="margin:4px"> <%= user.first_name %> <%= user.last_name %></h5>
          <p class="card-text"> <%= user.about_me %> </p>
        </div>
      </div>
    </div>
  </div>
</div>